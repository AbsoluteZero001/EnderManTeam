<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.springboothousemarket.Mapper.SysUserMapper">

    <resultMap id="sysUserResultMap" type="com.springboot.springboothousemarket.Entitiy.SysUser">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="realName" column="real_name"/>
        <result property="role" column="role"/>
        <result property="phone" column="phone"/>
        <result property="avatar" column="avatar"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_user(username, password, real_name, role, phone, avatar, is_deleted)
        VALUES (#{username}, #{password}, #{realName}, #{role}, #{phone}, #{avatar}, #{isDeleted})
    </insert>

    <select id="selectById" resultMap="sysUserResultMap">
        SELECT *
        FROM sys_user
        WHERE id = #{id}
          AND is_deleted = 0
    </select>

    <update id="update">
        UPDATE sys_user
        SET username=#{username},
            password=#{password},
            real_name=#{realName},
            role=#{role},
            phone=#{phone},
            avatar=#{avatar},
            is_deleted=#{isDeleted},
            update_time=#{updateTime}
        WHERE id = #{id}
    </update>

    <update id="deleteById">
        UPDATE sys_user
        SET is_deleted = 1
        WHERE id = #{id}
    </update>

    <select id="selectAll" resultMap="sysUserResultMap">
        SELECT *
        FROM sys_user
        WHERE is_deleted = 0
    </select>

    <select id="selectByUsername" resultMap="sysUserResultMap">
        SELECT *
        FROM sys_user
        WHERE username = #{username}
          AND is_deleted = 0
    </select>

</mapper>